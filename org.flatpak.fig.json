{
  "id": "org.flatpak.fig",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "fig",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland",
    "--filesystem=xdg-run/gvfsd",
    "--socket=session-bus",
    "--socket=system-bus",
    "--filesystem=home",
    "--filesystem=xdg-pictures:rw",
    "--filesystem=xdg-download:rw",
    "--env=GDK_BACKEND=x11",
    "--filesystem=xdg-run/pipewire-0",
    "--filesystem=xdg-config/gtk-4.0"
  ],
  "add-extensions": {
    "org.gnome.Platform.Compat.i386": {
      "directory": "lib/i386-linux-gnu",
      "version": "47"
    },
    "org.gtk.Gtk4theme": {
      "directory": "share/themes",
      "version": "4.0",
      "subdirectories": true,
      "no-autodownload": true,
      "autodelete": false
    }
  },
  "build-options": {
    "env": {
      "PYTHON": "python3"
    }
  },
  "modules": [
    {
      "name": "python3-setuptools",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install . --prefix=${FLATPAK_DEST} --no-deps --ignore-installed"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://files.pythonhosted.org/packages/ed/22/a438e0caa4576f8c383fa4d35f1cc01655a46c75be358960d815bfbb12bd/setuptools-75.3.0.tar.gz",
          "sha256": "fba5dd4d766e97be1b1681d98712680ae8f2f26d7881245f2ce9e40714f1a686"
        }
      ]
    },
    {
      "name": "python3-pillow",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install . --prefix=${FLATPAK_DEST} --no-deps --ignore-installed --no-build-isolation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://files.pythonhosted.org/packages/a5/26/0d95c04c868f6bdb0c447e3ee2de5564411845e36a858cfd63766bc7b563/pillow-11.0.0.tar.gz",
          "sha256": "72bacbaf24ac003fea9bff9837d1eedb6088758d41e100c1552930151f677739"
        }
      ]
    },
    {
      "name": "pygobject",
      "buildsystem": "meson",
      "config-opts": [
        "-Dtests=false",
        "-Dpython=/usr/bin/python3"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://files.pythonhosted.org/packages/2b/58/d34e67a79631177e3c08e7d02b5165147f590171f2cae6769502af5f7f7e/pygobject-3.50.0.tar.gz",
          "sha256": "4500ad3dbf331773d8dedf7212544c999a76fc96b63a91b3dcac1e5925a1d103"
        }
      ]
    },
    {
      "name": "libadwaita",
      "buildsystem": "meson",
      "config-opts": [
        "-Dexamples=false",
        "-Dtests=false",
        "-Dgtk_doc=false",
        "-Dintrospection=enabled"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/libadwaita/1.5/libadwaita-1.5.0.tar.xz",
          "sha256": "fd92287df9bb95c963654fb6e70d3e082e2bcb37b147e0e3c905567167993783"
        }
      ]
    },
    {
      "name": "fig",
      "builddir": true,
      "buildsystem": "meson",
      "sources": [
        {
          "type": "dir",
          "path": ".",
          "include": ["style/*.css"]
        }
      ]
    },
    {
      "name": "image-formats",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/lib/gdk-pixbuf-2.0/2.10.0/loaders",
        "cp -r /usr/lib/x86_64-linux-gnu/gdk-pixbuf-2.0/2.10.0/loaders/* /app/lib/gdk-pixbuf-2.0/2.10.0/loaders/",
        "mkdir -p /app/lib/gdk-pixbuf-2.0/2.10.0/",
        "gdk-pixbuf-query-loaders > /app/lib/gdk-pixbuf-2.0/2.10.0/loaders.cache"
      ],
      "modules": [
        {
          "name": "giflib",
          "buildsystem": "simple",
          "build-commands": [
            "make",
            "make DESTDIR=/app PREFIX=/app install"
          ],
          "sources": [
            {
              "type": "archive",
              "url": "https://downloads.sourceforge.net/project/giflib/giflib-5.2.1.tar.gz",
              "sha256": "31da5562f44c5f15d63340a09a4fd62b48c45620cd302f77a6d9acf0077879bd"
            }
          ]
        },
        {
          "name": "gdk-pixbuf-xlib",
          "buildsystem": "meson",
          "config-opts": [
            "-Dgtk_doc=false"
          ],
          "sources": [
            {
              "type": "archive",
              "url": "https://download.gnome.org/sources/gdk-pixbuf-xlib/2.40/gdk-pixbuf-xlib-2.40.2.tar.xz",
              "sha256": "8b8e1c270ec16a06f665ea841f8e4e167eaa0118d0cbfeeade43745f09198ff7"
            }
          ]
        }
      ]
    }
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "*.la",
    "*.a"
  ],
  "environment": {
    "MESA_DEBUG": "silent",
    "MESA_LOADER_DRIVER_OVERRIDE": "iris"
  }
}
